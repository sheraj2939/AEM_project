<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Configuration Selectors Lists"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="/mnt/overlay/wcm/core/content/sites/components/details.html/apps/tata-capital-moneyfy/components/content/credit-card-loans-landing/creditCard-banner">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Leave empty to use the page title."
                        fieldLabel="Title"
                        name="./title"/>
                    <boldtitle
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Add text to display in bold font"
                        fieldLabel="Bold Title Term"
                        name="./boldTerm"/>
                    <desktopImage
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldLabel="Background Desktop Image"
                        name="./desktopImage"
                        rootPath="/content/dam/tata-capital-web"/>
                    <mobileImage
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/pathbrowser"
                        fieldLabel="Background Mobile Image"
                        name="./mobileImage"
                        rootPath="/content/dam/tata-capital-web"/>
                    <selectorsMulti
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Selectors Lists"
                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                        composite="{Boolean}true"
                        fieldLabel="Selectors Lists">
                        <field
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/coral/foundation/form/fieldset"
                            eaem-nested="NODE_STORE"
                            name="./selectorsLists">
                            <items jcr:primaryType="nt:unstructured">
                                <column
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                    <items jcr:primaryType="nt:unstructured">
                                        <img
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="/libs/granite/ui/components/foundation/form/pathbrowser"
                                            fieldLabel="Select an Image Logo path"
                                            name="./img"
                                            rootPath="/content/dam/tata-capital-web/tcl-tccl/"/>
                                        <ImgAlt
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="/libs/granite/ui/components/foundation/form/textfield"
                                            fieldLabel="Enter Image Alt Text"
                                            name="./imgAlt"/>
                                        <ImgTtitle
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="/libs/granite/ui/components/foundation/form/textfield"
                                            fieldLabel="Enter Image Title"
                                            name="./imgAltLeft"/>
                                    </items>
                                </column>
                            </items>
                        </field>
                    </selectorsMulti>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
