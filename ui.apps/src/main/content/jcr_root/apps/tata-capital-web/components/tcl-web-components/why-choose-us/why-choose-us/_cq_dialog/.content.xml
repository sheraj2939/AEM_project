<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container"
                margin="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <margin-fourty
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Check to Remove 40px Margin"
                        name="./marginFourty"
                        text="40px Margin from space-tb40 Class"
                        value="{Boolean}true"/>
                    <margin-eighty
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Check to Remove 80px Bottom Margin"
                        name="./marginEighty"
                        text="80px Margin Bottom from space-b80 Class"
                        value="{Boolean}true"/>
                    <title-class-name
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldDescription="Enter Class For Spacing After tops-heads class"
                        fieldLabel="Enter Class For Spacing"
                        name="./titleClassName"/>
                    <bg-blue
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                        fieldDescription="Check to Remove 80px Bottom Margin"
                        name="./cardBgBlue"
                        text="check for cards background blue"
                        value="{Boolean}true"/>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
